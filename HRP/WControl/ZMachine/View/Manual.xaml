                <Button Name="btPart0_4" Content="WORK"      Grid.ColumnSpan="2" Grid.Row="4" Width="Auto" Height="Auto" Margin="1.5" Click="BtManual_Click" Background="SteelBlue" BorderThickness="0"/>
