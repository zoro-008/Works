                </Grid.RowDefinitions>

                <!--FontSize="{StaticResource BtFontSize}" -->
                <Button Name="btPart0_0" Content="HOME"      Grid.ColumnSpan="2" Grid.Row="0" Width="Auto" Height="Auto" Margin="1.5" Click="BtManual_Click" Background="SteelBlue" BorderThickness="0"/>
